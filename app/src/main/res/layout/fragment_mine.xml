<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragments.MineFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_theme"
        android:textColor="@color/white"
        android:textSize="@dimen/title_font_size"
        android:gravity="center"
        android:text="我的" />


    <RelativeLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="80dp">
        <ImageView
           android:id="@+id/logo_img"
            android:layout_width="30dp"
            android:layout_centerVertical="true"
            android:tint="@color/color_theme"
            android:src="@drawable/popular_icon"
            android:layout_height="30dp" />
        <TextView
            android:layout_toRightOf="@+id/logo_img"
            android:layout_width="wrap_content"
            android:text="Github Popular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_tiaozhuan"
            android:tint="@color/color_theme"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="20dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_theme"
            android:paddingHorizontal="10dp"
            android:layout_height="1px" />
        <TextView
            android:layout_width="match_parent"
            android:text="趋势管理"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_theme"
            android:paddingHorizontal="10dp"
            android:layout_height="1px" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/custom_language_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/language_img"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:tint="@color/color_theme"
            android:src="@drawable/ic_custom_language"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@+id/language_img"
            android:layout_width="wrap_content"
            android:text="自定义语言"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_tiaozhuan"
            android:tint="@color/color_theme"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="20dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_theme"
        android:paddingHorizontal="10dp"
        android:layout_height="1px" />
    <RelativeLayout
        android:id="@+id/sort_language_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/sort_language_img"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:tint="@color/color_theme"
            android:src="@drawable/ic_swap_vert"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@+id/sort_language_img"
            android:layout_width="wrap_content"
            android:text="语言排序"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_tiaozhuan"
            android:tint="@color/color_theme"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="20dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_theme"
            android:paddingHorizontal="10dp"
            android:layout_height="1px" />
        <TextView
            android:layout_width="match_parent"
            android:text="标签排序"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_theme"
            android:paddingHorizontal="10dp"
            android:layout_height="1px" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/key_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/custom_kay_img"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:tint="@color/color_theme"
            android:src="@drawable/ic_custom_language"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@+id/custom_kay_img"
            android:layout_width="wrap_content"
            android:text="语言管理"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_tiaozhuan"
            android:tint="@color/color_theme"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="20dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/color_theme"
        android:paddingHorizontal="10dp"
        android:layout_height="1px" />
    <RelativeLayout
        android:id="@+id/sort_key_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/sort_key_img"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:tint="@color/color_theme"
            android:src="@drawable/ic_swap_vert"
            android:layout_height="20dp" />
        <TextView
            android:layout_toRightOf="@+id/sort_key_img"
            android:layout_width="wrap_content"
            android:text="语言排序"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_tiaozhuan"
            android:tint="@color/color_theme"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="20dp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_theme"
            android:paddingHorizontal="10dp"
            android:layout_height="1px" />
        <TextView
            android:layout_width="match_parent"
            android:text="关于"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:background="@color/gray"
            android:layout_height="35dp" />
        <TextView
            android:layout_width="match_parent"
            android:background="@color/color_theme"
            android:paddingHorizontal="10dp"
            android:layout_height="1px" />

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/quit_layout"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center_vertical"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/quit_img"
            android:layout_width="15dp"

            android:layout_centerVertical="true"
            android:tint="@color/color_theme"
            android:src="@drawable/back"
            android:layout_height="15dp" />
        <TextView
            android:layout_toRightOf="@+id/quit_img"
            android:layout_width="wrap_content"
            android:text="退出"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="20dp"
            android:src="@drawable/ic_tiaozhuan"
            android:tint="@color/color_theme"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="20dp" />

    </RelativeLayout>

</LinearLayout>